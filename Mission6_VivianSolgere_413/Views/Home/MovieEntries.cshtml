
@model List<Movie>

<div class="container">
    <table class="table table-bordered">

        <thead class="fw-bold">
            <tr>
                <td>Category</td>
                <td>Title</td>
                <td>Year</td>
                <td>Director</td>
                <td>Rating</td>
                <td>Edited</td>
                <td>Lent To</td>
                <td>Copied To Plex</td>
                <td>Notes</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        </thead>

        @foreach (var x in Model)
        {
            <tbody>
                <tr>
                    <td>@x.Category?.CategoryName</td>
                    <td>@x.Title</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@(x.Edited)</td> 
                    <td>@x.LentTo</td>
                    <td>@x.CopiedToPlex</td>
                    <td>@x.Notes</td>
                    <td>
                        <a asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId" class="btn btn-info">Edit</a>
                    </td>
                    <td>
                        <form method="post" asp-action="Delete" asp-route-id="@x.MovieId">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this movie?')">Delete</button>
                        </form>
                    </td>

                </tr>
            </tbody>
            
        }
        
    </table>

</div>
